@model IEnumerable<Portfolio>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Table</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Client</th>
                            <th>Content</th>
                            <th>Setting</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="~/assets/img/@item.Image" /></td>
                                <td>@item.Name</td>
                                <td>@item.Category</td>
                                <td>@item.Client</td>
                                <td>@item.Info</td>
                                <td>
                                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <form method="post" class="d-inline " asp-action="Delete" asp-route-id="@item.Id">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <a asp-area="Admin" asp-controller="Portfolio" asp-action="Create" class="btn btn-success">Create</a>
                </table>
            </div>
        </div>
    </div>
</div>

